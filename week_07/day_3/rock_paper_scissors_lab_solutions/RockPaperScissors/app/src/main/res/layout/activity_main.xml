<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/make_selection_text"
        android:textSize="30dp"
        android:text="@string/make_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/user_choice_text"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/make_selection_text" />

    <TextView
        android:id="@+id/android_choice_text"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user_choice_text" />

    <TextView
        android:id="@+id/result_text"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/android_choice_text" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="1dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btnRock"
            android:textSize="30dp"
            android:text="@string/rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRockButtonClick" />

        <Button
            android:id="@+id/btnPaper"
            android:textSize="30dp"
            android:text="@string/paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPaperButtonClick" />

        <Button
            android:id="@+id/btnScissors"
            android:textSize="30dp"
            android:text="@string/scissors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onScissorsButtonClick" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>